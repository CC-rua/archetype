<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
        xsi:schemaLocation="https://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0 https://maven.apache.org/xsd/archetype-descriptor-1.1.0.xsd"
        name="pd-archetype"
        xmlns="https://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <requiredProperties>

    </requiredProperties>
    <modules>
        <module id="${rootArtifactId}-api" dir="__rootArtifactId__-api" name="${rootArtifactId}-api">
            <fileSets>
                <fileSet>
                    <dictionary>src/main/java</dictionary>
                    <include>**/*.java</include>
                    <include>**/*.info</include>
                </fileSet>
            </fileSets>
        </module>

        <module id="${rootArtifactId}-biz" dir="__rootArtifactId__-biz" name="${rootArtifactId}-biz">
            <fileSets>
                <fileSet>
                    <dictionary>src/main/java</dictionary>
                    <include>**/*.java</include>
                    <include>**/*.info</include>
                </fileSet>
            </fileSets>
        </module>
    </modules>

</archetype-descriptor>
